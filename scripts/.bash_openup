if [ -n "${LAZY_CODING_HOME}" ]; then
    set +e

    for j in "${LAZY_CODING_HOME}/scripts" "${LAZY_CODING_HOME}/scripts/private"
    do
        [ -e "${j}" ] && cd "${j}" || continue
        ls *.exp *.sh *.py 2> /dev/null | grep -v "^_" | xargs -I {} chmod +x "{}"
        chmod -x __import__.sh .bash_* 2> /dev/null
    done
    unset j

    set -e

    cd "${HOME}"
fi

